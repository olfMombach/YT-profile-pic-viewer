{
    "manifest_version": 2,
    "name": "YT profile pic viewer",
    "version": "1.0",

    "description": "Shows the full size profile picture when hovering over a YouTube account",

    "permissions": [
        "activeTab",
        "https://yt3.ggpht.com"
    ],

    "content_scripts": [
        {
            "matches": ["https://youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}
